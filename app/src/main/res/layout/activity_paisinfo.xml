<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaisinfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombrepais"
            android:layout_width="394dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="Nombre Pais"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:gravity="center"
            app:srcCompat="@drawable/load"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha2Code :"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="221dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/alpha2code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha2CodeInfo"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="221dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha3Code "
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/alpha3code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha3CodeInfo"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="256dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Native Name :"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="291dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/nativename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NativeNameInfo"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="291dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region :"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="324dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RegionInfo"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="324dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subregion :"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/subregion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SubRegionInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LatitudeInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LongitudeInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AreaInfo"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NumericCode :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/numericcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NumericCodeInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NativeLanguague :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/nativelanguague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NativeLanguagueInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CurrencyCode :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/currencycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CunrrencyCodeInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CurrencyName :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/currencyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CurrencyNameInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CurrencySymbol :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/currencysymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CurrencySymbolInfo" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>